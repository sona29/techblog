
  <h2>{{title}}</h2>
  
  <p>{{description}}</p>
  <div class="shadow p-3 mb-5 bg-white rounded">
  Created by {{user.name}} on {{format_date date_created}}
  </div>


<h2><i class="fas fa-comments"></i> Comments({{count}})</h2>
  {{#each comments as |comment| }}
  
  <div class="shadow-sm p-3 mb-5 rounded comment">
     {{comment.description}}
     
     -{{user.name}}, {{format_date date_created}}
  </div>
  
  {{/each}}



{{#if logged_in}}
<div class="col-md-6">
    <h3>Leave a Comment:</h3>

    <form class="form new-comment-form">
     
    
      <div class="form-group">
       
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
        <input type="hidden" id="blogId" name="blogId" value="{{id}}"">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
  {{/if}}

  <script src="/js/comment.js"></script>
